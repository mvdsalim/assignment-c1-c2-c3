
@{
    ViewBag.Title = "New";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/List">Back To Teachers</a>
    </nav>
</div>

<h2>New Teacher</h2>

<form method="POST" action="/Teacher/Create">
    <div>
        <label for="TeacherFName">First Name: </label>
        <input type="text" name="TeacherFName" id="TeacherFName" />
    </div>
    <div>
        <label for="TeacherLName">Last Name: </label>
        <input type="text" name="TeacherLName" id="TeacherLName" />
    </div>
    <div>
        <label for="EmployeeNumber">Employee Number: </label>
        <input type="text" name="EmployeeNumber" id="EmployeeNumber" />
    </div>
    <div>
        <label for="Salary">Salary: </label>
        <input type="text" name="Salary" id="Salary" />
    </div>
    <div>
        <input type="submit" value="Create Teacher" />
    </div>
</form>


